<MudDialog>
  <DialogContent>
    Setup Game
    <MudTextField @bind-Value="Seed" Placeholder="Type Seed Here" Variant="Variant.Outlined"></MudTextField>
    <MudCheckBox @bind-Checked="@Classic" Label="Classic"></MudCheckBox>
    <MudTextField @bind-Value="Height" Label="Height" Variant="Variant.Outlined"></MudTextField>
    <MudTextField @bind-Value="Width" Label="Width" Variant="Variant.Outlined"></MudTextField>
    <MudTextField @bind-Value="Duration" Label="Seconds" Variant="Variant.Outlined"></MudTextField>
  </DialogContent>
  <DialogActions>
    <MudButton OnClick="Cancel">Cancel</MudButton>
    <MudButton Color="Color.Primary" OnClick="Submit">Ok</MudButton>
  </DialogActions>
</MudDialog>

@code {

  [CascadingParameter]
  MudDialogInstance MudDialog { get; set; }

  void Submit() => MudDialog.Close(DialogResult.Ok(new StartGameAction(Seed, Width, Height, Classic, Duration)));
  void Cancel() => MudDialog.Cancel();

  public string Seed { get; set; }

  public bool Classic { get; set; } = false;

  public int Width { get; set; } = 4;

  public int Height { get; set; } = 4;

  public int Duration { get; set; } = 120;
}
