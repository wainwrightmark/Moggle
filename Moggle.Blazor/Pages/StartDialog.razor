@using Fluxor
<MudDialog>
  <DialogActions>
    <MudButton OnClick="Cancel">Cancel</MudButton>
    <MudButton Color="Color.Primary" OnClick="Submit">Ok</MudButton>
  </DialogActions>
  <DialogContent>
    <MudContainer Style="max-height: 200px; overflow-y: scroll">
      <MudTextField @bind-Value="Seed" Placeholder="Type Seed Here" Variant="Variant.Outlined" Adornment="Adornment.End" AdornmentIcon="@Filled.Casino" OnAdornmentClick="@GetRandomSeed"/>
      <MudTextField @bind-Value="Width" Label="Width" Variant="Variant.Outlined"/>
      <MudTextField @bind-Value="Height" Label="Height" Variant="Variant.Outlined"/>
      <MudTextField @bind-Value="Duration" Label="Seconds" Variant="Variant.Outlined"/>
      <MudTextField @bind-Value="MinWordLength" Label="MinWordLength" Variant="Variant.Outlined"/>
      <MudCheckBox @bind-Checked="@Classic" Label="Classic"/>
    </MudContainer>
  </DialogContent>

</MudDialog>

@code {

  [CascadingParameter]
  MudDialogInstance MudDialog { get; set; }

  /// <inheritdoc />
  protected override void OnParametersSet()
  {
    Classic= State.Value.Board.Dice.First().Runes.SequenceEqual("AACIOT".EnumerateRunes());
    Width = State.Value.Board.Width;
    Height = State.Value.Board.Height;
    base.OnParametersSet();
  }

  [Parameter]
  public IState<MoggleState> State { get; set; }

  void Submit() => MudDialog.Close(DialogResult.Ok(new StartGameAction(Seed, Width, Height, Classic, Duration, MinWordLength)));
  void Cancel() => MudDialog.Cancel();

  public string Seed { get; set; }

  public bool Classic { get; set; }

  public bool AllowCheating { get; set; }

  public int Width { get; set; } = 4;

  public int Height { get; set; } = 4;

  public int Duration { get; set; } = 120;

  public int MinWordLength { get; set; } = 3;

  public void GetRandomSeed()
  {
    Seed = GoodSeedHelper.GetGoodSeed();
  }

}
